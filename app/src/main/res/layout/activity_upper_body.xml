<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <LinearLayout android:orientation="vertical" android:padding="24dp"
        android:layout_width="match_parent" android:layout_height="wrap_content">

        <Button android:id="@+id/pushupButton" android:text="푸시업"
            android:layout_width="match_parent" android:layout_height="wrap_content"/>
        <Button android:id="@+id/shoulderButton" android:text="숄더 프레스"
            android:layout_width="match_parent" android:layout_height="wrap_content"/>
        <Button android:id="@+id/curlButton" android:text="덤벨 컬"
            android:layout_width="match_parent" android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"/>

        <TextView android:id="@+id/exerciseInfo" android:text="운동을 선택하세요"
            android:layout_width="wrap_content" android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"/>

        <TextView android:id="@+id/countText" android:text="횟수: 0 회"
            android:layout_width="wrap_content" android:layout_height="wrap_content"/>
        <Button android:id="@+id/countButton" android:text="1회 추가"
            android:layout_width="match_parent" android:layout_height="wrap_content"/>
        <Button android:id="@+id/finishButton" android:text="운동 종료"
            android:layout_width="match_parent" android:layout_height="wrap_content"
            android:layout_marginTop="16dp"/>
    </LinearLayout>
</ScrollView>